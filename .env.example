# SSL Configuration
# Set your domain name for SSL certificate generation
SSL_DOMAIN=localhost

# Thumbor Core Settings
THUMBOR_LOG_LEVEL=info
THUMBOR_NUM_PROCESSES=4
SECURITY_KEY=MY_SECURE_KEY
ALLOW_UNSAFE_URL=true

# Image Processing Settings
MAX_WIDTH=2000
MAX_HEIGHT=2000
QUALITY=85
AUTO_WEBP=true
AUTO_AVIF=true
PROGRESSIVE_JPEG=true

# Storage Configuration
STORAGE=thumbor.storages.file_storage
RESULT_STORAGE=thumbor.result_storages.file_storage
STORAGE_EXPIRATION_SECONDS=2592000

# HTTP Loader Settings
HTTP_LOADER_CONNECT_TIMEOUT=10
HTTP_LOADER_REQUEST_TIMEOUT=30
HTTP_LOADER_FOLLOW_REDIRECTS=true
HTTP_LOADER_MAX_REDIRECTS=5

# Performance Settings
ENGINE_THREADPOOL_SIZE=4
GC_INTERVAL=30

# CORS Settings
ACCESS_CONTROL_ALLOW_ORIGIN_HEADER=*

# Advanced Settings (uncomment and modify if needed)
# ALLOWED_SOURCES=["*.example.com", "*.mysite.com"]
# FILTERS=["thumbor.filters.brightness", "thumbor.filters.contrast"]
# DETECTORS=["thumbor.detectors.face_detector", "thumbor.detectors.feature_detector"]
# OPTIMIZERS=["thumbor.optimizers.jpegtran"]

# AWS S3 Storage (uncomment if using S3)
# STORAGE=thumbor.storages.s3_storage
# RESULT_STORAGE=thumbor.result_storages.s3_storage
# STORAGE_BUCKET=my-thumbor-bucket
# RESULT_STORAGE_BUCKET=my-thumbor-result-bucket
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-east-1

# Redis Configuration (for queued detector)
# REDIS_QUEUE_SERVER_HOST=redis
# REDIS_QUEUE_SERVER_PORT=6379
# REDIS_QUEUE_SERVER_DB=0
# REDIS_QUEUE_SERVER_PASSWORD=

# Sentry Error Reporting
# SENTRY_DSN_URL=https://your-sentry-dsn
# SENTRY_ENVIRONMENT=production

# Custom Error Handling
# USE_CUSTOM_ERROR_HANDLING=false
# ERROR_HANDLER_MODULE=thumbor.error_handlers.sentry

# Upload Settings
# UPLOAD_ENABLED=false
# UPLOAD_MAX_SIZE=0
# UPLOAD_DELETE_ALLOWED=false
# UPLOAD_PUT_ALLOWED=false

# Metrics Configuration
# STATSD_HOST=statsd
# STATSD_PORT=8125
# STATSD_PREFIX=thumbor

# Community Extensions
# COMMUNITY_EXTENSIONS=[]